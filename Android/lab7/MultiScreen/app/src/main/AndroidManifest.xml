<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.pmvs.multiscreen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiScreen">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="by.pmvs.multiscreen.Canari"
            android:label="@string/can" >
        </activity>
        <activity android:name="by.pmvs.multiscreen.Curili"
            android:label="@string/cur" >
        </activity>
        <activity android:name="by.pmvs.multiscreen.Maldivi"
            android:label="@string/mal" >
        </activity>
        <activity android:name="by.pmvs.multiscreen.Philippini"
            android:label="@string/phil" >
        </activity>
    </application>

</manifest>